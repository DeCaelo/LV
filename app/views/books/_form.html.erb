<%= simple_form_for @book do |f| %>
  <%= f.file_field :book_img, , label: "Image du livre" %>
  <%= f.input :author, label: "Auteur" %>
  <%= f.input :title, label: "Titre" %>
  <%= f.input :state, collection: ["lu", "pas_lu_pas_aimé", "à_lire_acheté", "à_lire_emprunté_biblio", "à_lire_emprunté_caro", "à_lire_non_acheté", "à_reprendre"], label: "Lu ou pas", prompt: "Lu ou à lire" %>
  <%= f.input :who,collection: ["Biblio","Caroline", "Mdu"], label: "Emprunté à qui", prompt: "A qui il appartient ?" %>
  <%= f.input_field :release_date, class: "form-control form-group datepicker", as: :string, placeholder: "date première publication" %>
  <%= f.input_field :release_pocket_date, class: "form-control form-group datepicker", as: :string, placeholder: "date publication en poche" %>
  <%= f.button :submit, 'Valider', :class => 'btn btn-medium' %>
<% end %>
